{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "global.d.ts"]
}
